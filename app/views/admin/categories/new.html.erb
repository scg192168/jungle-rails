
<h1>New Category</h1>

<%= form_with(model: @category, url: admin_categories_path, method: :post) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit 'Create Category' %>
  </div>
<% end %>
</div>